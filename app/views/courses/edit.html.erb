<div class="page-header">
  <h1>Edit Course #<%= @course.id %></h1>
</div>

<% if @course.errors.any? %>
  <% @course.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_course/<%= @course.id %>" class="form-horizontal">
  <!-- Label and input for course_url -->
  <div class="form-group">
    <label for="course_url" class="col-sm-2 control-label">
      Course url
    </label>
    <div class="col-sm-10">
      <input type="text" id="course_url" name="course_url" placeholder="Course url" class="form-control" value="<%= @course.course_url %>">
    </div>
  </div>

  <!-- Label and input for caption -->
  <div class="form-group">
    <label for="caption" class="col-sm-2 control-label">
      Caption
    </label>
    <div class="col-sm-10">
      <textarea id="caption" name="caption" placeholder="Caption" class="form-control" rows="3"><%= @course.caption %></textarea>
    </div>
  </div>

  <!-- Label and input for course_number -->
  <div class="form-group">
    <label for="course_number" class="col-sm-2 control-label">
      Course number
    </label>
    <div class="col-sm-10">
      <input type="text" id="course_number" name="course_number" placeholder="Course number" class="form-control" value="<%= @course.course_number %>">
    </div>
  </div>

  <!-- Label and input for course_name -->
  <div class="form-group">
    <label for="course_name" class="col-sm-2 control-label">
      Course name
    </label>
    <div class="col-sm-10">
      <textarea id="course_name" name="course_name" placeholder="Course name" class="form-control" rows="3"><%= @course.course_name %></textarea>
    </div>
  </div>

  <!-- Label and input for file_type -->
  <div class="form-group">
    <label for="file_type" class="col-sm-2 control-label">
      File type
    </label>
    <div class="col-sm-10">
      <input type="text" id="file_type" name="file_type" placeholder="File type" class="form-control" value="<%= @course.file_type %>">
    </div>
  </div>

  <!-- Label and input for subject_number -->
  <div class="form-group">
    <label for="subject_number" class="col-sm-2 control-label">
      Subject number
    </label>
    <div class="col-sm-10">
      <input type="text" id="subject_number" name="subject_number" placeholder="Subject number" class="form-control" value="<%= @course.subject_number %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Course" class="btn btn-primary">
    </div>
  </div>
</form>
