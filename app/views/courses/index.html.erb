<div class="page-header">
  <h1>Courses</h1>
</div>

<p><a href="/courses/new" class="btn btn-primary">Add a New Course</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Course url</th>
      <th>Course number</th>
      <th>Course name</th>
      <th>Caption</th>
      <th>File type</th>
      <th>Subject number</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_url %></td>
        <iframe title="YouTube video player" width="640" height="390" src="http://www.youtube.com/embed/zZAWygYoN30" frameborder="0" allowfullscreen></iframe>
        <td><%= course.course_number %></td>
        <td><%= course.course_name %></td>
        <td><%= course.caption %></td>
        <td><%= course.file_type %></td>
        <td><%= course.subject_number %></td>
        <td>
          <a href="/courses/<%= course.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/courses/<%= course.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_course/<%= course.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

