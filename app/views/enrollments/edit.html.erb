<div class="page-header">
  <h1>Edit Enrollment #<%= @enrollment.id %></h1>
</div>

<% if @enrollment.errors.any? %>
  <% @enrollment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_enrollment/<%= @enrollment.id %>" class="form-horizontal">
  <!-- Label and input for lecture_id -->
  <div class="form-group">
    <label for="lecture_id" class="col-sm-2 control-label">
      Lecture
    </label>
    <div class="col-sm-10">
      <input type="text" id="lecture_id" name="lecture_id" placeholder="Lecture" class="form-control" value="<%= @enrollment.lecture_id %>">
    </div>
  </div>

  <!-- Label and input for subject_id -->
  <div class="form-group">
    <label for="subject_id" class="col-sm-2 control-label">
      Subject
    </label>
    <div class="col-sm-10">
      <input type="text" id="subject_id" name="subject_id" placeholder="Subject" class="form-control" value="<%= @enrollment.subject_id %>">
    </div>
  </div>

  <!-- Label and input for user_name -->
  <div class="form-group">
    <label for="user_name" class="col-sm-2 control-label">
      User name
    </label>
    <div class="col-sm-10">
      <input type="text" id="user_name" name="user_name" placeholder="User name" class="form-control" value="<%= @enrollment.user_name %>">
    </div>
  </div>

  <!-- Label and input for subject_number -->
  <div class="form-group">
    <label for="subject_number" class="col-sm-2 control-label">
      Subject number
    </label>
    <div class="col-sm-10">
      <input type="text" id="subject_number" name="subject_number" placeholder="Subject number" class="form-control" value="<%= @enrollment.subject_number %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Enrollment" class="btn btn-primary">
    </div>
  </div>
</form>
