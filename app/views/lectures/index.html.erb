    </tr>
  </thead>

  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>

        <!-- Embed dynamic YouTube video -->

        <iframe title="YouTube video player" width="650" height="380" src=<%=lecture.lecture_url%> frameborder="0" allowfullscreen></iframe>

        <td><%= lecture.lecture_name %></td>
        <td><%= lecture.subject_name %></td>
        <td>
          <a href="/lectures/<%= lecture.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/lectures/<%= lecture.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_lecture/<%= lecture.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

