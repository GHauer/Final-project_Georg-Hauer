<div class="page-header">
  <h1>Add Lecture</h1>
</div>

<% if @lecture.errors.any? %>
  <% @lecture.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_lecture" class="form-horizontal">
  <!-- Label and input for lecture_url -->
  <div class="form-group">
    <label for="lecture_url" class="col-sm-2 control-label">
      Lecture url
    </label>
    <div class="col-sm-10">
      <input type="text" id="lecture_url" name="lecture_url" placeholder="Lecture url" class="form-control" value="<%= @lecture.lecture_url %>">
    </div>
  </div>

  <!-- Label and input for caption -->
  <div class="form-group">
    <label for="caption" class="col-sm-2 control-label">
      Caption
    </label>
    <div class="col-sm-10">
      <textarea id="caption" name="caption" placeholder="Caption" class="form-control" rows="3"><%= @lecture.caption %></textarea>
    </div>
  </div>

  <!-- Label and input for lecture_number -->
  <div class="form-group">
    <label for="lecture_number" class="col-sm-2 control-label">
      Lecture number
    </label>
    <div class="col-sm-10">
      <input type="text" id="lecture_number" name="lecture_number" placeholder="Lecture number" class="form-control" value="<%= @lecture.lecture_number %>">
    </div>
  </div>

  <!-- Label and input for lecture_name -->
  <div class="form-group">
    <label for="lecture_name" class="col-sm-2 control-label">
      Lecture name
    </label>
    <div class="col-sm-10">
      <input type="text" id="lecture_name" name="lecture_name" placeholder="Lecture name" class="form-control" value="<%= @lecture.lecture_name %>">
    </div>
  </div>

  <!-- Label and input for file_type -->
  <div class="form-group">
    <label for="file_type" class="col-sm-2 control-label">
      File type
    </label>
    <div class="col-sm-10">
      <input type="text" id="file_type" name="file_type" placeholder="File type" class="form-control" value="<%= @lecture.file_type %>">
    </div>
  </div>

  <!-- Label and input for subject_number -->
  <div class="form-group">
    <label for="subject_number" class="col-sm-2 control-label">
      Subject number
    </label>
    <div class="col-sm-10">
      <input type="text" id="subject_number" name="subject_number" placeholder="Subject number" class="form-control" value="<%= @lecture.subject_number %>">
    </div>
  </div>

  <!-- Label and input for subject_name -->
  <div class="form-group">
    <label for="subject_name" class="col-sm-2 control-label">
      Subject name
    </label>
    <div class="col-sm-10">
      <input type="text" id="subject_name" name="subject_name" placeholder="Subject name" class="form-control" value="<%= @lecture.subject_name %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Lecture" class="btn btn-primary">
    </div>
  </div>
</form>
