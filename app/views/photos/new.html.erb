<div class="page-header">
  <h1>Add Photo</h1>
</div>

<% if @photo.errors.any? %>
  <% @photo.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_photo" class="form-horizontal" method="post" enctype="multipart/form-data">
  <p>Date: <input type="text" id="datepicker"></p>

  <script type="text/javascript">
    jQuery('#datepicker').datepicker();
  </script>

  <div class="form-group">
    <!-- changed image to video  -->
    <label for="video" class="col-sm-2 control-label">
      Image
    </label>
    <div class="col-sm-10">
      <!-- changed image to video  -->
      <input type="file" id="video" name="video" class="form-control">
    </div>
  </div>

  <!-- Label and input for caption -->
  <div class="form-group">
    <label for="caption" class="col-sm-2 control-label">
      Caption
    </label>
    <div class="col-sm-10">
      <textarea id="caption" name="caption" placeholder="Caption" class="form-control" rows="3"><%= @photo.caption %></textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Photo" class="btn btn-primary">
    </div>
  </div>
</form>
