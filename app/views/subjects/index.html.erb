<div class="page-header">
  <h1>Subjects</h1>
</div>

<p><a href="/subjects/new" class="btn btn-primary">Add a New Subject</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Subject number</th>
      <th>Subject name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.subject_number %></td>
        <td><%= subject.subject_name %></td>
        <td>
          <a href="/subjects/<%= subject.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/subjects/<%= subject.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_subject/<%= subject.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

